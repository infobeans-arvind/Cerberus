{% extends 'base.html.twig' %}
{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add New User</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <form class="form-signin" name='register_form' id='register_form' method='post' action='{{path('register')}}'>
                        <div class="panel-body">
                            {{ form_errors(form) }}
                            <div class="dataTable_wrapper">
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_errors(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder':'First Name'}}) }}
                                        </div>
                                    </div>                                
                                </div>
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_errors(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder':'Last Name'}}) }}
                                        </div>
                                    </div>                                
                                </div>
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_errors(form.email, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'Email'}}) }}
                                        </div>
                                    </div>                                
                                </div>
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_errors(form.password.first, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder':'Password'}}) }}<br>
                                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder':'Confirm Password'}}) }}
                                        </div>
                                    </div>                                
                                </div>
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_errors(form.recordId, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_widget(form.recordId, {'attr': {'class': 'form-control', 'placeholder':'Record ID'}}) }}
                                        </div>
                                    </div>                                
                                </div>
                                <div class="col-md-12">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            {{ form_widget(form.roles, { 'attr': {'class': 'form-control', 'placeholder':'Role'} }) }}
                                        </div>
                                    </div>                                
                                </div>     
                            </div>                          
                        </div>
                        {{ form_row(form._token) }}
                        <button class="btn btn-primary" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </div>            
    </div>
