											<th>SoftDelete</th>
											<th>HardDelete</th>
											{% endif %}
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
										<tr>											
											<td>{{ user.firstName }} {{ user.lastName }}</td>
											<td>{{ user.email }}</td>
											{% if user.lastLogin == null %}
												<td> - </td>
											{% else %}
												<td>{{ user.lastLogin |date('d M, H:i A') }}<br>{{ user.lastLogin |date('Y') }}</td>
											{% endif %}
											
											{% if user.enabled == 1 %}
												<td class="center"><input type="checkbox" value="" onclick="isenabled({{ user.id }})" checked ></td>
											{% else %}
												<td class="center"><input type="checkbox" value="" onclick="isenabled({{ user.id }})"></td>
											{% endif %}
											{#<td><a href="users/active/{{ user.id }}">Active</a></td>#}
											<td><a href="users/edit/{{ user.id }}">Edit</a></td>
											{% if is_granted('ROLE_SUPER_ADMIN') %}
											<td><a href="users/softdelete/{{ user.id }}">SoftDelete</a></td>
											<td><a href="users/delete/{{ user.id }}">HardDelete</a></td>
											{% endif %}
